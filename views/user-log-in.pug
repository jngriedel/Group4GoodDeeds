extends layout.pug

include includes/utils

block content
    script(src="/javascripts/demoUser.js" type="module")
    +validationErrorSummary(errors)
    form(action='/users/log-in' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'email', email)
        +field('Password', 'password', password, 'password')

        div
            button(type='submit') Log-in
            a(href='/') Cancel
    div() Don't have an account?
        p: a(href='/users/sign-up') Sign-Up
    div() or
        form(action='/users/demo-user' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            input(type='hidden' name='email' value='mrgoodguy@gmail.com')
            input(type='hidden' name= 'password' value='Test1!')
            p: button(type='submit') Demo User
